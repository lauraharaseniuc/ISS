<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.lab7.model.ReservedSeat"
           table="Reservedseats">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <many-to-one name="reservation" class="com.example.lab7.model.Reservation"
                     column="reservation_id" not-null="true"/>
        <many-to-one name="referredSeat" class="com.example.lab7.model.Seat"
                     column="seat_id" not-null="true"/>
    </class>
</hibernate-mapping>